<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layoutMain"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:scrollbars="none"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/CAPA_FILME"
				android:layout_width="match_parent"
				android:layout_height="400dp"
				android:layout_marginBottom="5dp"
				android:backgroundTintMode="src_over"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/ImagemCapaFS"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#000000"
					android:src="@drawable/ic_launcher"
					android:transitionName="elemento1" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/textView5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:gravity="center_horizontal"
					android:text="Título do filme"
					android:textColor="#FFFFFF"
					android:textSize="20sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/textView6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center_horizontal"
					android:text="Autor do filme"
					android:textColor="#FFFFFF"
					android:textSize="18sp" />

				<TextView
					android:id="@+id/Descrição"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="10dp"
					android:fontFamily="@font/netflixlight"
					android:text="NULL"
					android:textAlignment="viewStart"
					android:textColor="#FFFFFF"
					android:textSize="16sp" />

				<ImageView
					android:id="@+id/imageView3"
					android:layout_width="120dp"
					android:layout_height="60dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_weight="1"
					android:src="@drawable/botaoassistir" />

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

	<View
		android:layout_width="match_parent"
		android:layout_height="1.5dp"
		android:background="#580000"
		android:elevation="10dp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#BB2929"
		android:backgroundTint="#1f1f1f"
		android:elevation="10dp"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/imageButtonLupa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="#00FFFFFF"
			android:onClick="irBusca"
			android:src="@drawable/lupa"
			android:tint="#FFFFFF"/>

		<ImageButton
			android:id="@+id/imageButtonHome"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="#00FFFFFF"
			android:onClick="irHome"
			android:src="@drawable/ic_home_white"
			android:tint="#DA1414"/>

		<ImageButton
			android:id="@+id/imageButtonProfile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="#00FFFFFF"
			android:onClick="irProfile"
			android:src="@drawable/account"
			android:tint="#FFFFFF"/>

	</LinearLayout>

</LinearLayout>

