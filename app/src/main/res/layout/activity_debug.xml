<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="20dp">

		<TextView
			android:id="@+id/SPLASH_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="SplashActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/MAIN_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="MainActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/PROFILE_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="ProfileActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />


		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/LOGIN_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="LoginActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />


		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/PLAYER_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="PlayerActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/EDITPROFILE_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="EditProfileActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical" />

		<TextView
			android:id="@+id/JSON_ACTIVITY"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:text="JSONActivity"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</LinearLayout>

</ScrollView>

