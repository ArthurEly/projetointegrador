<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/g1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">

	<LinearLayout
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".ProfileActivity">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/logoNetflocos"
				android:layout_width="103dp"
				android:layout_height="57dp"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="16dp"
				android:src="@drawable/splashlogo"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="right"
				android:orientation="horizontal">

				<ImageView
					android:src="@drawable/account_circle_white"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginRight="16dp"/>

			</LinearLayout>

		</LinearLayout>

		<View
			android:id="@+id/divider"
			android:layout_width="match_parent"
			android:layout_height="0.75sp"
			android:background="#FFFCFC"/>

		<TextView
			android:id="@+id/tituloConta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="24dp"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="20dp"
			android:text="Conta"
			android:textColor="#FFFFFF"
			android:textSize="30sp"/>

		<View
			android:id="@+id/divider2"
			android:layout_width="match_parent"
			android:layout_height="0.75dp"
			android:layout_marginStart="24dp"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="24dp"
			android:layout_marginRight="24dp"
			android:background="#FFFFFF"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tituloNome"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="20dp"
				android:text="Nome:"
				android:textColor="#FFFFFF"/>

			<TextView
				android:id="@+id/textoNome"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="20dp"
				android:text="NOMENOMENOME"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tituloEmail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="20dp"
				android:text="Email:"
				android:textColor="#FFFFFF"/>

			<TextView
				android:id="@+id/textoEmail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="20dp"
				android:text="EMAILEMAILEMAIL"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:visibility="visible">

			<TextView
				android:id="@+id/tituloSenha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="20dp"
				android:text="Senha:"
				android:textColor="#FFFFFF"/>

			<TextView
				android:id="@+id/textoSenha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="20dp"
				android:inputType="numberPassword|textWebPassword"
				android:text="SENHASENHASENHA"/>

		</LinearLayout>

		<Button
			android:id="@+id/button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="24dp"
			android:background="#CC0000"
			android:onClick="irMenuEdit"
			android:padding="10dp"
			android:text="ALTERAR INFORMAÇÕES"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:orientation="horizontal"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="bottom"
			android:gravity="bottom"
			android:orientation="vertical">

			<View
				android:layout_width="0dp"
				android:layout_height="1.5dp"
				android:background="#580000"
				android:elevation="10dp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#BB2929"
				android:backgroundTint="#1f1f1f"
				android:elevation="10dp"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageButton
					android:id="@+id/imageButtonLupa"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#00FFFFFF"
					android:onClick="irBusca"
					android:src="@drawable/lupa"
					android:tint="#FFFFFF"/>

				<ImageButton
					android:id="@+id/imageButtonHome"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#00FFFFFF"
					android:onClick="irHome"
					android:src="@drawable/ic_home_white"
					android:tint="#FFFFFF"/>

				<ImageButton
					android:id="@+id/imageButtonProfile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#00FFFFFF"
					android:onClick="irProfile"
					android:src="@drawable/account"
					android:tint="#DA1414"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</GridLayout>

